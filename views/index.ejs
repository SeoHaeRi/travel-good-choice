  <%-include( './footer.ejs' )%>

        <div class="popup">
          <form id="popup-form">
            <img src="static/img/xmascookie.png" alt="크리스마스 이벤트" class="popup-img">
            <div class="popup-check">
              <span><input type="checkbox" name="checkbox" id="check"> 하루동안 다시보지 않기</span>
              <i class="bi bi-x-circle" onclick="modalClose()"></i>
            </div>
          </form>
        </div>


        <script>
          if ("<%=popup%>" == "none") {
            document.querySelector(".popup").classList.add('d-none');
          }

          function modalClose() {
            let form = document.getElementById("popup-form");
            let check = document.getElementById("check");
            axios({
              method: "post",
              url: "/setpopup",
              data: {
                value: form.checkbox.checked
              }
            }).then((result) => {
              if (result.data) {
                console.log("성공");
              }
              document.querySelector(".popup").classList.add('d-none');
            })
          }
        </script>
</body>

